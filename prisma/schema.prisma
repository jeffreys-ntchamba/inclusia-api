generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String? @unique 
  statut Boolean
  email String @unique
  password String?
  phone String @unique
  commandes Commande[]
   
 
}
model Fournisseur{
  id Int @id @default(autoincrement())
  name String @unique 
  phone String @unique
  email String @unique
  password String
  statut Boolean
  produits Produit[]
 
}
model Produit{
  id Int @id @default(autoincrement())
  name String 
  chiffreAffaireMoyen Float
  descriptChiffreAffaireMoyen String
  notationGprIndex String
  chiffreAffairesPrevisionnel Float
   descriptChiffreAffairesPrevisionnel String
  tauxRentabilitePrevisionnel Float
  descriptRentabilitePrevisionnel String
  besoinDeCapital Float
  descriptionBesoinDeCapital String
  partDisponible Float
  coursUnePart Float
  siege String
  statut Boolean
  image String?
  categorie String?
  secteur String?
  description String?
  fournisseur Fournisseur? @relation(fields: [fournisseurId], references: [id])
  fournisseurId Int?
  commande Commande[] 
  
  
 
}
model Commande{
  id Int @id @default(autoincrement())
  quantite Float
  produitId Int  
  userId Int  
  date DateTime? @default(now())
  produit Produit? @relation(fields: [produitId], references: [id])
  user User? @relation(fields: [userId], references: [id])
 
  
  
  
}

model Ticker {
  id        Int   @id @default(1)
  text      String
  duration  Int      @default(10000)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
